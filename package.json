{
  "name": "todo-desktop-app",
  "version": "1.0.0",
  "description": "A simple To-Do desktop application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [
    "todo",
    "electron",
    "desktop",
    "productivity",
    "adhd"
  ],
  "author": "",
  "license": "MIT",
  "build": {
    "appId": "com.yourname.todo",
    "productName": "To-Do",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "portable",
      "icon": "public/icon.png"
    },
    "mac": {
      "icon": "public/icon.png"
    },
    "linux": {
      "icon": "public/icon.png"
    },
    "forceCodeSigning": false
  },
  "devDependencies": {
    "electron": "^29.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.4.0"
  }
}